root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.min.*]
trim_trailing_whitespace = false
insert_final_newline = false

[*.bat]
end_of_line = crlf

[*.{js,ts,php}]
quote_type = single
